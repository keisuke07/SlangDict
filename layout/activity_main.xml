<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.myapplication.MainActivity"
    android:background="#fdfafa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Slang Dict"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton"
        android:src="@drawable/signup"
        android:background="#fefcfc"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/signin"
        android:background="#fcfbfb"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Popular Word"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_margin="1dp" />
    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />
    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />
    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText5"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />
    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imagebottonButton1"
        android:src="@android:drawable/ic_menu_search"
        android:background="#f9f7f7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imagebottonButton2"
        android:src="@android:drawable/ic_menu_add"
        android:background="#f9f9f9"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imagebottonButton1"
        android:layout_toEndOf="@+id/imagebottonButton1" />
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imagebottonButton3"
        android:src="@android:drawable/btn_star"
        android:background="#fefcfc"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imagebottonButton2"
        android:layout_toEndOf="@+id/imagebottonButton2" />
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imagebottonButton4"
        android:src="@android:drawable/ic_menu_recent_history"
        android:background="#fbfafa"
        android:layout_alignTop="@+id/imagebottonButton3"
        android:layout_toRightOf="@+id/imagebottonButton3"
        android:layout_toEndOf="@+id/imagebottonButton3" />
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imagebottonButton5"
        android:src="@android:drawable/ic_menu_preferences"
        android:background="#fcfafa"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imagebottonButton4"
        android:layout_toEndOf="@+id/imagebottonButton4" />

</RelativeLayout>
